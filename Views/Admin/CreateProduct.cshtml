@model Product
@{
	Layout = "_SidebarLayout";
}
<div class="container">
	<h2>Create Product</h2>
	<form asp-action="CreateProduct" method="post" enctype="multipart/form-data">
		<div class="form-group">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Price"></label>
			<input asp-for="Price" class="form-control" />
			<span asp-validation-for="Price" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Image"></label>
			<input asp-for="Image" type="file" class="form-control" />
			<span asp-validation-for="Image" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Available_Quantity"></label>
			<input asp-for="Available_Quantity" class="form-control" />
			<span asp-validation-for="Available_Quantity" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Category"></label>
			<input asp-for="Category" class="form-control" />
			<span asp-validation-for="Category" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="type"></label>
			<input asp-for="type" class="form-control" />
			<span asp-validation-for="type" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label asp-for="Description"></label>
			<textarea asp-for="Description" class="form-control"></textarea>
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-primary">Create</button>
	</form>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}