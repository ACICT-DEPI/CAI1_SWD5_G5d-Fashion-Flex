@{
	Layout = "_SidebarLayout";
}

<h2>Orders</h2>
<p>Total Orders: @ViewBag.OrderCount</p>
<p>Total Amount: @ViewBag.OrdersTotalAmount</p>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.Customer.First_Name</td>
                <td>@order.Total_Amount</td>
                <td>
                    <a href="/Admin/ViewOrder/@order.Id" class="btn btn-info">View</a>
                </td>
            </tr>
        }
    </tbody>
</table>
