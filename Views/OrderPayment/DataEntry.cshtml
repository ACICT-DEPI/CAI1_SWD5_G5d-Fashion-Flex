@model Fashion_Flex.ViewModels.AddressPaymentViewModel

@{
	ViewData["Title"] = "Billing Address";
	Layout = "_CozaStoreLayout";
}

<div class="container m-tb-200 m-bb-200">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow-sm">
				<div class="card-body">
					<h2 class="card-title text-center mb-4">Billing Address</h2>
					<form asp-action="DataEntry" method="post">
						<div class="form-row">
							<div class="form-group col-md-6">
								<label asp-for="Full_Name" class="form-label">Name</label>
								<input asp-for="Full_Name" class="form-control" placeholder="Enter your Full Name" />
							</div>
						</div>
						<div class="form-group">
							<label asp-for="Email" class="form-label">Email Address</label>
							<input asp-for="Email" class="form-control" placeholder="Enter your Email" />
						</div>
						<div class="form-group">
							<label asp-for="PhoneNumber" class="form-label">Phone Number</label>
							<div class="input-group">
								<select asp-for="Phone_Country_Code" asp-items="ViewBag.CountryPhoneCodes" class="custom-select"></select>
								<input asp-for="PhoneNumber" class="form-control" id="phoneNumberInput" type="tel" placeholder="Enter your phone number" />
							</div>
						</div>

						<div class="form-group">
							<label asp-for="City" class="form-label">City</label>
							<input asp-for="City" class="form-control" placeholder="Enter your City" />
						</div>

						<div class="form-group">
							<label asp-for="Address" class="form-label">Address</label>
							<input asp-for="Address" class="form-control" placeholder="Enter your Address" />
						</div>

						<button type="submit" class="btn btn-primary btn-block">COD</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
}
