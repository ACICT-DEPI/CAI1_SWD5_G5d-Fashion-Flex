@model List<Fashion_Flex.Models.Order_Item>

<h2>Order Items List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order Item ID</th>
            <th>Product</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Product?.Name</td>
                <td>@item.Quantity</td>
                <td>
                    <a href="/OrderItem/Edit/@item.Id" class="btn btn-primary">Edit</a>
                    <a href="/OrderItem/Delete/@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/OrderItem/New" class="btn btn-success">Create New Order Item</a>
