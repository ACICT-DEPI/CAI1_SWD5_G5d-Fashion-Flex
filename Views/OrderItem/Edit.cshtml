@model Fashion_Flex.Models.Order_Item

<h2>Edit Order Item</h2>

<form method="post" action="/OrderItem/SaveEditedOrderItem">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label>Order:</label>
        <input type="text" name="Order_Id" class="form-control" value="@Model.Order_Id" />
    </div>

    <div class="form-group">
        <label>Product:</label>
        <input type="text" name="Product_Id" class="form-control" value="@Model.Product_Id" />
    </div>

    <div class="form-group">
        <label>Quantity:</label>
        <input type="number" name="Quantity" class="form-control" value="@Model.Quantity" />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-success">Save Changes</button>
    </div>
</form>
