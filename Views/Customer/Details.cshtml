@model Fashion_Flex.ViewModels.ProfileViewModel
@{
	Layout = "_CozaStoreLayout";
}

<div class="container m-tb-200">
	<h2 class="mb-4">Profile Details</h2>

	<div class="card">
		<div class="card-body">
			<h4 class="card-title">@Model.First_Name @Model.Last_Name</h4>
			<p class="card-text"><strong>Email:</strong> @Model.Email</p>
			<p class="card-text"><strong>Address:</strong>
				<div>
					<p class="card-text"><strong>Street name:</strong> @Model.Street_Name</p>
					<p class="card-text"><strong>Building name/no:</strong> @Model.Building_No</p>
					<p class="card-text"><strong>City/Area:</strong> @Model.City</p>
					<p class="card-text"><strong>Governorate:</strong> @Model.Governorate</p>
				</div>
			</p>
			<p class="card-text"><strong>Date of Birth:</strong> @Model.Date_Of_Birth.ToShortDateString()</p>
			<p class="card-text"><strong>Phone Number:</strong> @Model.Phone_Number</p>
			<p class="card-text"><strong>Phone Country Code:</strong> @Model.Phone_Country_Code</p>
			<p class="card-text"><strong>Status:</strong> @(Model.Is_Active ? "Active" : "Inactive")</p>
		</div>
	</div>

	<div class="mt-3">
		<a href="@Url.Action("Edit")" class="btn btn-primary">Edit Profile</a>
	</div>
</div>
