

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Admin Dashboard</title>
	<link href="~/css/bootstrap.min.css" rel="stylesheet" />
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

</head>
<body>
	<div class="container-fluid">
		<div class="row">
			<!-- Sidebar -->
			<nav class="col-md-2 d-none d-md-block bg-dark sidebar" style="position: fixed">
				@* Sidebar content *@
				<div class="sidebar-sticky">
					<div class="d-flex flex-column flex-shrink-0 p-3 bg-dark" style="width: 280px; height: 100vh;">
						<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
							<i class="fas fa-home fa-2x me-2"></i>
							<span class="fs-4">Shop Dashboard</span>
						</a>
						<hr>
						<ul class="nav nav-pills flex-column mb-auto">
							<li class="nav-item">
								<a asp-controller="Admin" asp-action="Index" class="nav-link text-white @(ViewData["currTab"] as string == "dashboard" ? "active" : "" )" aria-current="page">
									<i class="fas fa-tachometer-alt me-2"></i>
									Dashboard
								</a>
							</li>
							<li>
								<a asp-controller="Admin" asp-action="Customers" class="nav-link text-white @(ViewData["currTab"] as string == "customers" ? "active" : "" )">
									<i class="fas fa-list-alt me-2"></i>
									Customers
								</a>
							</li>
							<li>
								<a asp-controller="Admin" asp-action="Products" class="nav-link text-white @(ViewData["currTab"] as string == "products" ? "active" : "" )">
									<i class="fas fa-box-open me-2"></i>
									Products
								</a>
							</li>
							<li>
								<a asp-controller="Admin" asp-action="Orders" class="nav-link text-white @(ViewData["currTab"] as string == "orders" ? "active" : "" )">
									<i class="fas fa-shopping-cart me-2"></i>
									Orders
								</a>
							</li>
						</ul>
						<hr>
						<div class="dropdown">
							<a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
								<img src="https://via.placeholder.com/40" alt="Admin" width="32" height="32" class="rounded-circle me-2">
								<strong>Admin</strong>
							</a>
							<ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
								<li><a class="dropdown-item" href="#">Profile</a></li>
								<li><a class="dropdown-item" href="#">Settings</a></li>
								<li><hr class="dropdown-divider"></li>
								<li><a class="dropdown-item" href="#">Sign out</a></li>
							</ul>
						</div>
					</div>
				</div>
			</nav>

			<!-- Main Content -->
			<main role="main" class="col-md-9 ms-sm-auto col-lg-10 px-4">
				<div class="container mt-4" style="margin-left: 18px;">
					@RenderBody()
				</div>
			</main>
		</div>
	</div>

	@RenderSection("Scripts", false)
	<script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>

