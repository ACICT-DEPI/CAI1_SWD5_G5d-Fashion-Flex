	ViewData["Title"] = "About Us";
	Layout = "_CozaStoreLayout";
}

<!-- Title page -->
<section class="bg-img1 txt-center p-lr-15 p-tb-92 m-t-100" style="background-image: url('@Url.Content("~/images/bg-01.jpg")');">
	<h2 class="ltext-105 cl0 txt-center">
		About Us
	</h2>
</section>


