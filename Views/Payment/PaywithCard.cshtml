@model Fashion_Flex.ViewModels.CardPaymentViewModel

@{
	ViewData["Title"] = "PaywithCard";
	Layout = "_CozaStoreLayout";
}

<div class="container m-tb-200 m-bb-200">
	<div class="row justify-content-center">
		<div class="col-md-8 col-lg-6">
			<div class="card shadow-sm">
				<div class="card-body">
					<h2 class="card-title text-center mb-4">Pay with Card</h2>
					<form asp-action="PaywithCard" method="post">
						<div class="form-group">
							<label asp-for="Email" class="form-label">Email Address</label>
							<input asp-for="Email" class="form-control" placeholder="Enter your email" />
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label asp-for="CardHolderName" class="form-label">Cardholder Name</label>
								<input asp-for="CardHolderName" class="form-control" placeholder="Name on card" />
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-6">
								<label asp-for="Cardnumber" class="form-label">Card Information</label>
								<input asp-for="Cardnumber" class="form-control" placeholder="Card Number" />
							</div>
							<div class="form-group col-md-6">
								<label asp-for="Month" class="form-label">Month</label>
								<input asp-for="Month" class="form-control" placeholder="MM" />
							</div>

							<div class="form-group">
								<label asp-for="Year" class="form-label">Year</label>
								<input asp-for="Year" class="form-control" placeholder="YYYY" />
							</div>
							<div class="form-group">
								<label asp-for="CVC" class="form-label">CVC</label>
								<input asp-for="CVC" class="form-control" placeholder="CVC" />
							</div>
						</div>

						<button type="submit" class="btn btn-primary btn-block">Pay</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
}
